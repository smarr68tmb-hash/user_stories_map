# AI API Configuration
# Поддержка: Gemini (бесплатно), Groq, Perplexity, OpenAI
# Приоритет провайдеров (через запятую, первый - приоритетный)
AI_PROVIDER_PRIORITY=gemini,groq,perplexity,openai

# Gemini API (рекомендуется, бесплатно с лимитами)
# Получить ключ: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIza...your-key-here
# Модели Gemini для разных задач:
GEMINI_ENHANCEMENT_MODEL=gemini-2.0-flash-exp    # Stage 1: Enhancement (250 RPD)
GEMINI_GENERATION_MODEL=gemini-2.0-flash-exp     # Stage 2: Generation (50 RPD при использовании Pro)
GEMINI_ASSISTANT_MODEL=gemini-2.0-flash-exp      # AI Assistant (250 RPD)
# Проактивные лимиты (переключение до исчерпания)
GEMINI_PRO_LIMIT=45       # Из 50 RPD
GEMINI_FLASH_LIMIT=230    # Из 250 RPD

# Groq API (бесплатно с лимитами)
GROQ_API_KEY=gsk_your-key-here
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_ENHANCEMENT_MODEL=llama-3.1-8b-instant

# Perplexity API
PERPLEXITY_API_KEY=pplx-your-key-here
PERPLEXITY_MODEL=llama-3.1-sonar-large-128k-online
PERPLEXITY_ENHANCEMENT_MODEL=llama-3.1-sonar-small-32k-online

# OpenAI API
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_ENHANCEMENT_MODEL=gpt-4o-mini

# API_PROVIDER можно указать явно (автоопределяется по ключам)
API_PROVIDER=gemini
API_MODEL=gemini-2.0-flash-exp
API_TEMPERATURE=0.7

# Database Configuration
# Для разработки можно использовать SQLite:
# DATABASE_URL=sqlite:///./usm.db
# Для production используйте PostgreSQL:
DATABASE_URL=postgresql://usm_user:usm_password@localhost:5432/usm_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Logging
LOG_LEVEL=INFO
