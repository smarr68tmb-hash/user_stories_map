[flake8]
# Максимальная длина строки
max-line-length = 127

# Игнорируемые ошибки
ignore = 
    # E203: whitespace before ':' (конфликтует с Black)
    E203,
    # E501: line too long (управляется max-line-length)
    E501,
    # W503: line break before binary operator (конфликтует с Black)
    W503,
    # F401: imported but unused (может быть в __init__.py)
    F401

# Исключаемые директории
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    alembic/versions/*.py

# Максимальная сложность функции
max-complexity = 10

